@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set your password";
    Layout = "_AuthLayout";
}

<section class="card-signup">
    <div class="card-signup-header">
        <h1>Enter your secure Password.</h1>
        <p class="additional-info">It must be at least 8 characters long.</p>
    </div>
    <div class="card-signup-body">
        <form method="post" asp-action="SetPassword" asp-controller="SignUp" novalidate>
            <label asp-for="Password"></label>
            <div class="form-group">
                <input asp-for="Password" class="form-input"/>
                <span asp-validation-for="Password"></span>
            </div>
            <label asp-for="ConfirmPassword"></label>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-input"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn-submit"></button>
        </form>
    </div>
    <div class="card-signup-footer">
        <div class="form-alreadyhaveaccount">
            Already have an account? <a asp-action="Index" asp-controller="Login">Log In</a>
        </div>
    </div>
</section>

@await Html.PartialAsync("_validationScripts")
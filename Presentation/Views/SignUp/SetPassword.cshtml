@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set your password";
    Layout = "_AuthLayout";
}

<section class="card">
    <div class="card-header">
        <h1>Enter your secure Password.</h1>
        <p>It must be at least 8 characters long.</p>
        <p>
            @ViewBag.ErrorMessage
        </p>
    </div>
    <div class="card-body">
        <form method="post" asp-action="SetPassword" asp-controller="SignUp">
            <div class="form-group">
                <input asp-for="Password" class="form-input"/>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-input"/>
            </div>
            <button type="submit" class="btn-submit"></button>
        </form>
    </div>
    <div class="card-footer">
        Already have an account? <a asp-action="Index" asp-controller="Login" class="nav-link">Log in</a>
    </div>
</section>